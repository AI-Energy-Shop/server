{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "regex": "^(?!.*[%+&]).+$"
    },
    "description": {
      "type": "text",
      "required": true
    },
    "product_type": {
      "type": "string"
    },
    "vendor": {
      "type": "string"
    },
    "odoo_product_id": {
      "type": "string",
      "unique": true,
      "required": true
    },
    "files": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "files"
      ]
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "key_features": {
      "displayName": "key_features",
      "type": "component",
      "repeatable": true,
      "component": "elements.key-features"
    },
    "model": {
      "type": "string",
      "required": true
    },
    "inventories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::inventory.inventory",
      "inversedBy": "products"
    },
    "price_lists": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::price.price",
      "inversedBy": "products"
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category",
      "inversedBy": "products"
    },
    "brand": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::brand.brand",
      "inversedBy": "products"
    },
    "variants": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::variant.variant",
      "inversedBy": "products"
    },
    "collections": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::collection.collection",
      "mappedBy": "products"
    },
    "specifications": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::specification.specification",
      "mappedBy": "products"
    },
    "releaseAt": {
      "type": "datetime",
      "required": false
    }
  }
}
