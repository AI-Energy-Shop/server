{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "vendor": {
      "type": "string"
    },
    "odoo_product_id": {
      "type": "string",
      "unique": true
    },
    "files": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "files"
      ]
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "specification": {
      "type": "component",
      "repeatable": true,
      "component": "elements.specification"
    },
    "key_features": {
      "displayName": "key_features",
      "type": "component",
      "repeatable": true,
      "component": "elements.key-features"
    },
    "model": {
      "type": "string",
      "required": true
    },
    "inventories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::inventory.inventory",
      "inversedBy": "products"
    },
    "price_lists": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::price.price",
      "inversedBy": "products"
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category",
      "inversedBy": "products"
    },
    "brand": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::brand.brand",
      "inversedBy": "products"
    }
  }
}
